<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-6 justify-content-center align-items-center mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Detail Vendor</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span>Perusahaan : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.company_name.charAt(0).toUpperCase() +
                            data.company_name.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Email : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.email.charAt(0).toUpperCase() +
                            data.email.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>PIC : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.pic.charAt(0).toUpperCase() +
                            data.pic.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Kontak : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.contact.charAt(0).toUpperCase() +
                            data.contact.slice(1); %>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
