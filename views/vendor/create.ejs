<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-8 justify-content-center align-items-center mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Buat Vendor</h3>
                </div>
                <div class="card-body">
                    <form action="/vendors" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1"
                                >Nama Perusahaan</label
                            >
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="company_name"
                                name="company_name"
                                placeholder="Masukan nama perusahaan..."
                                autocomplete="off"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="email"
                                name="email"
                                placeholder="Masukan email..."
                                autocomplete="off"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">PIC</label>
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="pic"
                                name="pic"
                                placeholder="Masukan PIC..."
                                autocomplete="off"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kontak</label>
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="contact"
                                name="contact"
                                placeholder="Masukan kontak vendor..."
                                autocomplete="off"
                            />
                        </div>

                        <% if (message) { %>
                        <p class="text-danger font-semibold"><%= message %></p>
                        <% } %>

                        <button type="submit" class="btn btn-primary mt-2">
                            Kirim
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
