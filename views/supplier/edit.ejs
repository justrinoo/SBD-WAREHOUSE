<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-8 justify-content-center align-items-center mx-auto">
            <a href="/suppliers">
                <button class="btn btn-sm btn-dark mb-4">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="22"
                        height="22"
                        fill="#fff"
                        viewBox="0 0 256 256"
                    >
                        <path
                            d="M152,72H128V32a8,8,0,0,0-13.66-5.66l-96,96a8,8,0,0,0,0,11.32l96,96A8,8,0,0,0,128,224V184h24a8,8,0,0,0,8-8V80A8,8,0,0,0,152,72Zm-8,96H120a8,8,0,0,0-8,8v28.69L35.31,128,112,51.31V80a8,8,0,0,0,8,8h24Zm80-88v96a8,8,0,0,1-16,0V80a8,8,0,0,1,16,0Zm-32,0v96a8,8,0,0,1-16,0V80a8,8,0,0,1,16,0Z"
                        ></path>
                    </svg>
                </button>
            </a>
            <div class="card">
                <div class="card-header">
                    <h3>Edit Supplier</h3>
                </div>
                <div class="card-body">
                    <form
                        action="/suppliers/edit/<%= supplier?.supplier_id %>"
                        method="POST"
                    >
                        <div class="form-group">
                            <label for="exampleInputEmail1"
                                >Nama Supplier</label
                            >
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="supplier_name"
                                name="supplier_name"
                                value="<%= supplier?.supplier_name.charAt(0).toUpperCase() + supplier?.supplier_name.slice(1); %>"
                                placeholder="Masukan nama supplier..."
                                autocomplete="off"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1"
                                >Kontak Person</label
                            >
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="contact_person"
                                name="contact_person"
                                placeholder="Masukan kontak person supplier..."
                                autocomplete="off"
                                value="<%= supplier?.contact_person.charAt(0).toUpperCase() + supplier?.contact_person.slice(1); %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1"
                                >Kontak Email</label
                            >
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="contact_email"
                                name="contact_email"
                                placeholder="Masukan kontak email supplier..."
                                autocomplete="off"
                                value="<%= supplier?.contact_email.charAt(0).toUpperCase() + supplier?.contact_email.slice(1); %>"
                            />
                        </div>

                        <% if (message) { %>
                        <p class="text-danger font-semibold"><%= message %></p>
                        <% } %>

                        <button type="submit" class="btn btn-primary mt-2">
                            Edit Supplier
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
