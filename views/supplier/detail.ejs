<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-6 justify-content-center align-items-center mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Detail Supplier</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span>Nama Supplier : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.supplier_name.charAt(0).toUpperCase() +
                            data.supplier_name.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Kontak Person : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.contact_person.charAt(0).toUpperCase() +
                            data.contact_person.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Kontak Email : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.contact_email.charAt(0).toUpperCase() +
                            data.contact_email.slice(1); %>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
