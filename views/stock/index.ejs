<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="d-flex align-items-center justify-content-between">
            <h1>Produk Stok</h1>
            <a class="text-decoration-none" href="/stock/create">
                <button class="btn btn-outline-primary">Buat Stok</button>
            </a>
        </div>
         <% if (data.length > 0) { %>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th class="text-center" scope="col">No</th>
                    <th class="text-center" scope="col">Penyuplai</th>
                    <th class="text-center" scope="col">Produk</th>
                    <th class="text-center" scope="col">Gudang</th>
                    <!-- <th class="text-center" scope="col">Kuantitas Produk</th> -->
                    <th class="text-center" scope="col">Persediaan</th>
                    <th class="text-center" scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
              <% data.forEach((stock,index) => { %>
                <tr>
                    <th class="text-center" scope="row"><%= index + 1 %></th>
                    <td class="text-center"><%= stock?.company_name.charAt(0).toUpperCase() + stock?.company_name.slice(1); %></td>
                    <td class="text-center""><%= stock?.Product_Name.charAt(0).toUpperCase() + stock?.Product_Name.slice(1); %></td>
                    <td class="text-center""><%= stock?.warehouse_name.charAt(0).toUpperCase() + stock?.warehouse_name.slice(1); %></td>
                    <!-- <td class="text-center""><%= stock?.Kuantity_Product.charAt(0).toUpperCase() + stock?.Kuantity_Product.slice(1); %></td> -->
                    <td class="text-center""><%= stock?.Stock_Balance.charAt(0).toUpperCase() + stock?.Stock_Balance.slice(1); %></td>
                    <td class="text-center"">
                       <a href="/stocks/detail/<%= stock?.ID_Stock %>" class="text-decoration-none">
                             <button class="btn btn-info btn-sm">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="22"
                                height="22"
                                fill="#fff"
                                viewBox="0 0 256 256"
                            >
                                <path
                                    d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm16-40a8,8,0,0,1-8,8,16,16,0,0,1-16-16V128a8,8,0,0,1,0-16,16,16,0,0,1,16,16v40A8,8,0,0,1,144,176ZM112,84a12,12,0,1,1,12,12A12,12,0,0,1,112,84Z"
                                ></path>
                            </svg>
                        </button>
                    </a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#stockDelete<%= stock?.ID_Stock %>">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="22"
                                height="22"
                                fill="#fff"
                                viewBox="0 0 256 256"
                            >
                                <path
                                    d="M216,48H176V40a24,24,0,0,0-24-24H104A24,24,0,0,0,80,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM96,40a8,8,0,0,1,8-8h48a8,8,0,0,1,8,8v8H96Zm96,168H64V64H192ZM112,104v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Zm48,0v64a8,8,0,0,1-16,0V104a8,8,0,0,1,16,0Z"
                                ></path>
                            </svg>
                        </button>
                            <div class="modal fade" id="stockDelete<%= stock?.ID_Stock %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title fs-5 fw-light" id="staticBackdropLabel">Yakin ingin menghapus Stock <span class="fw-bold">
                                        <%= stock?.Product_Name %>
                                    </span>?</h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-footer">
                                    <form action="/stock/delete/<%= stock?.ID_Stock %>" method="post">
                                        <button type="submit" class="btn btn-outline-danger">Hapus</button>
                                    </form>
                                </div>
                                </div>
                            </div>
                            </div>
                    </td>
                </tr>
             <% }) %>
            </tbody>
        </table>
         <% } else {%>
            <p>Data Kosong...</p>
          <% } %>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
