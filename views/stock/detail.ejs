<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
	<div class="row">
		<div
			class="col-md-6 justify-content-center align-items-center mx-auto">
			<div class="card">
				<div class="card-header">
					<h3>Detail Stock</h3>
				</div>
				<div class="card-body d-flex flex-column">
					<div class="d-flex align-items-center">
						<span>Nama Produk : </span>
						<h6 class="mt-2 mx-2">
							<%= data.Product_Name.charAt(0).toUpperCase()
							+ data.Product_Name.slice(1); %>
						</h6>
					</div>
					<div class="d-flex align-items-center">
						<span>Nama Perusahaan : </span>
						<h6 class="mt-2 mx-2">
							<%= data.company_name.charAt(0).toUpperCase()
							+ data.company_name.slice(1); %>
						</h6>
					</div>
					<div class="d-flex align-items-center">
						<span>Nama Gudang : </span>
						<h6 class="mt-2 mx-2">
							<%=
							data.warehouse_name.charAt(0).toUpperCase() +
							data.warehouse_name.slice(1); %>
						</h6>
					</div>
					<div class="d-flex align-items-center">
						<span>Kuantity Produk : </span>
						<h6 class="mt-2 mx-2">
							<%=
							data.Kuantity_Product.charAt(0).toUpperCase()
							+ data.Kuantity_Product.slice(1); %>
						</h6>
					</div>
					<div class="d-flex align-items-center">
						<span>Stock Balance : </span>
						<h6 class="mt-2 mx-2">
							<%= data.Stock_Balance.charAt(0).toUpperCase()
							+ data.Stock_Balance.slice(1); %>
						</h6>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include('../partials/footer.ejs') %>
