<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-6 justify-content-center align-items-center mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Detail Produk Gudang</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span>Nama Produk : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.product_name.charAt(0).toUpperCase() +
                            data.product_name.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Kategori Produk : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.category.charAt(0).toUpperCase() +
                            data.category.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Brand Produk : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.brand.charAt(0).toUpperCase() +
                            data.brand.slice(1); %>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
