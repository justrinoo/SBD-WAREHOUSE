<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-6 justify-content-center align-items-center mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Detail Gudang</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span>Nama Gudang : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.warehouse_name.charAt(0).toUpperCase() +
                            data.warehouse_name.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Lokasi Gudang : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.location.charAt(0).toUpperCase() +
                            data.location.slice(1); %>
                        </h6>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Warehouse Manajer : </span>
                        <h6 class="mt-2 mx-2">
                            <%= data.warehouse_manager.charAt(0).toUpperCase() +
                            data.warehouse_manager.slice(1); %>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
