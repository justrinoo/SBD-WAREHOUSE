<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-8 justify-content-center align-items-center mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Buat Gudang</h3>
                </div>
                <div class="card-body">
                    <form action="/warehouse" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nama Gudang</label>
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="warehouse_name"
                                name="warehouse_name"
                                placeholder="Masukan nama gudang..."
                                autocomplete="off"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Lokasi</label>
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="location"
                                name="location"
                                placeholder="Masukan lokasi..."
                                autocomplete="off"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1"
                                >Nama Manajer Gudang</label
                            >
                            <input
                                type="text"
                                class="form-control mt-2 mb-2"
                                id="warehouse_manager"
                                name="warehouse_manager"
                                placeholder="Masukan nama manajer gudang..."
                                autocomplete="off"
                            />
                        </div>

                        <% if (message) { %>
                        <p class="text-danger font-semibold"><%= message %></p>
                        <% } %>

                        <button type="submit" class="btn btn-primary mt-2">
                            Buat
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
