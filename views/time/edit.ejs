<%- include('../partials/header.ejs') %>
<div class="container py-5 pb-5">
    <div class="row">
        <div class="col-md-8 justify-content-center align-items-center mx-auto">
            <a href="/time">
                <button class="btn btn-sm btn-dark mb-4">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="22"
                        height="22"
                        fill="#fff"
                        viewBox="0 0 256 256"
                    >
                        <path
                            d="M152,72H128V32a8,8,0,0,0-13.66-5.66l-96,96a8,8,0,0,0,0,11.32l96,96A8,8,0,0,0,128,224V184h24a8,8,0,0,0,8-8V80A8,8,0,0,0,152,72Zm-8,96H120a8,8,0,0,0-8,8v28.69L35.31,128,112,51.31V80a8,8,0,0,0,8,8h24Zm80-88v96a8,8,0,0,1-16,0V80a8,8,0,0,1,16,0Zm-32,0v96a8,8,0,0,1-16,0V80a8,8,0,0,1,16,0Z"
                        ></path>
                    </svg>
                </button>
            </a>
            <div class="card">
                <div class="card-header">
                    <h3>Edit Waktu</h3>
                </div>
                <div class="card-body">
                    <form
                        action="/time/edit/<%= time?.time_id %>"
                        method="POST"
                    >
                        <div class="form-group">
                            <label for="timeAndDate">Tanggal Dan Waktu</label>
                            <input
                                type="date"
                                class="form-control mt-2 mb-2"
                                id="timeAndDate"
                                value="<%= time?.timeAndDate %>"
                                name="timeAndDate"
                            />
                        </div>
                        <% if (message) { %>
                        <p class="text-danger font-semibold"><%= message %></p>
                        <% } %>

                        <button type="submit" class="btn btn-primary mt-2">
                            Ubah Waktu
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
